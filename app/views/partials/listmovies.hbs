{{#unless collection.movies}}
  <h3 class="ui center aligned message">It's very quiet in here... start adding some movies!</h3>
{{/unless}}

{{#if collection.movies}}

  <table class="ui fixed striped table">
    <thead>
      <tr>
        <th class="four wide">Movie</th>
        <th class="four wide">Director</th>
        <th class="three wide">Genre</th>
        <th class="three wide">Runtime</th>
        <th class="one wide"> </th>
        <th class="one wide"> </th>
      </tr>
    </thead>
  <tbody>
      {{#each collection.movies}}
      <form class = "ui form" action="/collection/{{../collection.id}}/updatemovie/{{id}}" method="POST">
      <tr class="fields">
        <td class="field">
          <span class="ui input">
           <input placeholder="Title" type="text" size="30" name="title" autofocus required value = "{{capitalise title}}">
          </span>
        </td>
        <td class="field">
          <span class="ui input">
            <input placeholder="Director" type="text" size="30" name="director" required value = "{{capitalise director}}">
          </span>
        </td>
        <td class="field">
         <span class="ui input">
          <select name="genre" id="genre" style="padding:.6em 2.5em; border:solid lightgray 1px;border-radius:5px;">
            <option value="{{genre}}" selected="selected">{{genre}}</option>
            {{{populate genre}}}       
			    </select>       
          </span>
        </td>
        <td class="field">
          <span class="ui input">
            <input placeholder="Runtime" type="text" name="runtime" required value = "{{runtime}}">
          </span>
        </td>
        <td class="center aligned">
          <button class="ui submit icon button"><i class="icon pencil alternate"></i></button>
        </td>
        <td class="center aligned">
          <a href="/collection/{{../collection.id}}/deletemovie/{{id}}" class="ui icon button delmovie">
            <i class="icon trash"></i>
          </a>
        </td>
      </tr>
      </form> 
      {{/each}}
    </tbody>
  </table>

  <p>
    <span id="rating"> </span>
  </p>

  <button class="ui blue button" onclick="getRating()">
    Rate it! <i class="star icon"></i>
  </button>

{{/if}}
